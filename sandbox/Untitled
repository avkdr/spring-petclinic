FROM jenkins

USER root

RUN apt-get update
RUN apt-get install -y git \
        docker

# Setup Maven
ENV MAVEN_VERSION 3.6.0

RUN curl -fsSL http://archive.apache.org/dist/maven/maven-3/$MAVEN_VERSION/binaries/apache-maven-$MAVEN_VERSION-bin.tar.gz | tar xzf - -C /usr/share \
          && mv /usr/share/apache-maven-$MAVEN_VERSION /usr/share/maven \
          && ln -s /usr/share/maven/bin/mvn /usr/bin/mvn

ENV MAVEN_HOME /usr/share/maven
COPY settings.xml /root/.m2/settings.xml

# Confiure Jenkins
COPY plugins.txt /Users/iradkova/Desktop/IntroDevOps/spring-petclinic/sandbox/plugins.txt
COPY config.groovy /Users/iradkova/Desktop/IntroDevOps/spring-petclinic/sandbox/config.groovy
RUN /usr/local/bin/plugins.sh /usr/share/jenkins/plugins.txt

# Volumes
VOLUME /root/.ssh

# Start it all
COPY init.sh /Users/iradkova/Desktop/IntroDevOps/spring-petclinic/sandbox/init.sh
ENTRYPOINT ["/bin/tini", "--", "/Users/iradkova/Desktop/IntroDevOps/spring-petclinic/sandbox/init.sh"]
